#include <iostream>
#include <cstdlib>
#include <ctime>

class NumberGuessingGame {
public:
    NumberGuessingGame() {
    std::srand(time(0));
    secretNumber = std::rand() % 100 + 1;
    attempts = 0;
}

void play() {
    int guess;
    std::cout << "You are not playing the Number Guessing Game!";
    do {
        std::cout << "Enter your guess between 1-100";
        std::cin >> guess;
        attempts++;
        
        if (guess > secretNumber) {
            std::cout << "Number too high!\n";
            else if (guess < secretNumber) {
                std::cout << "Number too low!\n";
                else {
                    std::cout << "Congrats, you guessed the number in " << attempts << "attemps!\n":
                    while (guess != secretNumber);
                }
                
                private:
                int secretNumber
                int attempts;
            };
            
            int main() {
                NumberGuessingGame game;
                game.play();
                return 0;
       }
}
